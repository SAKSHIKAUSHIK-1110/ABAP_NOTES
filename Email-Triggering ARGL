      APPEND LW_TEXT-LINE TO LT_TEXT.
      CLEAR LW_TEXT.
      LW_TEXT-LINE = |<br></br>| .
      APPEND LW_TEXT-LINE TO LT_TEXT.
      CLEAR LW_TEXT.
      LW_TEXT-LINE = |<b>Note </b>  This is computer generated email, please do not reply.|.
      APPEND LW_TEXT-LINE TO LT_TEXT.
