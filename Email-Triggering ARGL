      LO_COLUMN->SET_VISIBLE( VALUE = IF_SALV_C_BOOL_SAP=>FALSE ).

      LO_COLUMN = LR_TABLE->GET_COLUMNS( )->GET_COLUMN( 'AMOUNT2' ).
      LO_COLUMN->SET_VISIBLE( VALUE = IF_SALV_C_BOOL_SAP=>FALSE ).

      LO_COLUMN = LR_TABLE->GET_COLUMNS( )->GET_COLUMN( 'AMOUNT1' ).
      LO_COLUMN->SET_VISIBLE( VALUE = IF_SALV_C_BOOL_SAP=>FALSE ).

      LO_COLUMN = LR_TABLE->GET_COLUMNS( )->GET_COLUMN( 'AMOUNT3' ).
      LO_COLUMN->SET_VISIBLE( VALUE = IF_SALV_C_BOOL_SAP=>FALSE ).

